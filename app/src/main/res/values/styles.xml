<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowActionModeOverlay">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:editTextStyle">@style/EditText</item>
    <item name="android:textColorPrimary">@color/primary_text</item>
    <item name="android:actionBarTabTextStyle">@style/TabTextColor</item>
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
</style>

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme"/>

    <style name="FabTheme" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">@color/ligth_gray</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="SrNegocio"/>

    <style name="TabTextColor" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SrNegocio.WellcomeTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/display</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="SrNegocio.Title" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/title</item>
    </style>

    <style name="SrNegocio.Subtitle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/subheading</item>
    </style>

    <style name="SrNegocio.Description" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/body</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="SrNegocio.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:theme">@style/ButtonTheme</item>
    </style>

    <style name="SrNegocio.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@drawable/button_selector</item>
        <item name="android:textSize">@dimen/subheading</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/accent</item>
        <item name="android:textColorHighlight">@color/accent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <!-- Items -->

    <style name="SrNegocio.Items"/>

    <style name="SrNegocio.Items.Fab">
        <item name="android:layout_marginBottom">@dimen/margin_8</item>
        <item name="android:layout_marginRight">@dimen/margin_8</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

</resources>
